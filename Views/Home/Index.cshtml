@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MyDbConnection.Models.User


<h1>Login and Register</h1>

<form asp-action="Register" asp-controller="Home" method="post">
    <div class="form-group">
        <span asp-validation-for="first_name"></span>
        <label asp-for="first_name"></label>
        <input asp-for="first_name">

    </div>
     <div class="form-group">
        <span asp-validation-for="last_name"></span>
        <label asp-for="last_name"></label>
        <input asp-for="last_name">

    </div>
     <div class="form-group">
        <span asp-validation-for="email "></span>
        <label asp-for="email"></label>
        <input asp-for="email">

    </div>
     <div class="form-group">
        <span asp-validation-for="password "></span>
        <label asp-for="password"></label>
        <input asp-for="password">

    </div>
     <div class="form-group">
        <span asp-validation-for="confirm "></span>
        <label asp-for="confirm"></label>
        <input asp-for="confirm">

    </div>

<input type="submit" value="Register">
    </form>

<h1>Coming From MySql DB</h1>
@foreach(var user in ViewBag.Users)
{
    <p>@user["first_name"] @user["last_name"] @user["email"]</p>
}

